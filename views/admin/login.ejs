                            <a class="dropdown-item" href="#"><i class="material-icons md-help_outline"></i>Help center</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-danger" href="#"><i class="material-icons md-exit_to_app"></i>Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </header>
        <section class="content-main mt-80 mb-80">
            <div class="card mx-auto card-login">
                <div class="card-body">
                    <h4 class="card-title mb-4">Sign in</h4>
                    <%if (typeof message!=='undefined'){%>
                        <p class="text-danger"><%=message%></p>
                    <%}%>
                    <form id="loginForm" action="" method="post" onsubmit="return validateForm()">
                        <div class="mb-3">
                            <input id="email" class="form-control" placeholder="email" name="email" type="text">
                            <div id="emailError" class="text-danger"></div>
                        </div>
                        <div class="mb-3">
                            <input id="password" class="form-control" placeholder="Password" name="password" type="password">
                            <div id="passwordError" class="text-danger"></div>
                        </div>
                        <div class="mb-4">
                            <button type="submit" class="btn btn-primary w-100">Login</button>
                        </div>
                    </form>
                   
                    
                    
                </div>
            </div>
        </section>
        <footer class="main-footer text-center">
            <p class="font-xs">
                <script>
                document.write(new Date().getFullYear())
                </script> ©,Goldex watch store
            </p>
            <p class="font-xs mb-30">All rights reserved</p>
        </footer>
    </main>
    <script src="assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="assets/js/vendors/jquery.fullscreen.min.js"></script>
